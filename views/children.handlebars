<div class="text-center">
  <div class="col-md-6 project-list">
  {{#if childs.length}}
    <h3>My Children:</h3>
    {{#each childs as |child|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <li><strong>Name:</strong> {{child.name}}</li>
        <li><strong>Birthday:</strong> {{child.birthdate}}</li>
        <li><strong>View My Child: <a href="/api/children/{{child.id}}">Link</a></strong></li>
        <li><strong>TODO - <a href="/api/children/{{child.id}}">Link</a> to Todos</strong></li>
        <li><strong>TODO - <a href="/api/children/{{child.id}}">Link</a> to Tadas</strong></li>
      </div>
     </div>

     <p>---</p>
    </div>
    {{/each}}
  {{else}}
  You don't currently have any children!
  <br>TODO <a href="#">Add a child</a>
  {{/if}}
  </div>
</div>

