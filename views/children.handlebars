            <input type="file" />
            <div class="card-body">
              <h2 class="card-title"><strong>{{child.name}}</strong></h5>
              <p class="card-text">
                Born on <strong class="child-date">{{child.birthdate}}</strong>
              </p>
              <a href="/api/children/{{child.id}}" class="btn btn-light"><i class="fa fa-check-circle-o icon-cog-body" aria-hidden="true"></i>&nbsp;ToDos</a>
              <a href="/api/children/{{child.id}}" class="btn btn-light"><i class="fa fa-check-circle icon-cog-body" aria-hidden="true"></i>&nbsp;TaDas</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>


