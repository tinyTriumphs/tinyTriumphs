<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>User Information:</h3>
    <p>My id is {{id}} and my email is {{email}}.</p>

    <h4>Add a new Child to your profile here!</h4>
    <form class="form new-child-form">
      <div class="form-group">
        <label for="child-name">Your Child's Name:</label>
        <input class="form-input" type="text" id="child-name" name="child-name" />
      </div>
      <div class="form-group">
        <label for="child-birthdate">Your Child's Birthdate:</label>
        <input class="form-input" type="date" id="child-birthdate" name="child-birthdate" />
      </div>
      <div class="form-group">
        <label for="child-gender">Gender:</label>
        <input class="form-input" type="radio" id="female" name="child-gender" value="female">
        <label for="female">Female</label><br>
        <input class="form-input" type="radio" id="male" name="child-gender" value="male">
        <label for="male">Male</label><br>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="assets/js/profile.js"></script>
